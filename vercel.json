{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "crons": [
    {
      "path": "/api/morning",
      "schedule": "0 4 * * *"
    },
    {
      "path": "/api/facts",
      "schedule": "0 10 * * *"
    },
    {
      "path": "/api/memes",
      "schedule": "0 15 * * *"
    }
  ],
  "functions": {
    "api/*.py": {
      "runtime": "@vercel/python@0.9.0"
    }
  }
}